page{
    background-color: #f0f0f0;
}
.collect-wrap{
    color: #666666;
}
.collect-goods{
    margin: 20rpx;
}
.cg-category{
    display: flex;
}
.cg-category-item{
    border:1rpx solid #ccc;
    padding: 10rpx;
    margin-right: 10rpx;
    background-color: #fff;
}
.cg-category-item.active{
    border-color:currentColor;
    color: var(--themeColor);
}
.cg-content-item{
    display: flex;
    background-color: #fff;
    margin-top: 20rpx;
}
.cgc-item-l{
    flex:1;
}
.cgc-item-r{
    flex:3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding-left: 20rpx;
}
.cgc-ritem-text{
    overflow: hidden;
    text-overflow: ellipsis;
    /* 弹性伸缩盒子模型显示 */
    display: -webkit-box;
    /* 限制在一个块元素显示的文本的行数 */
    -webkit-line-clamp: 2;
    /* 设置或检索伸缩盒对象的子元素的排列方式 */
    -webkit-box-orient: vertical;
}
.cgc-ritem-price{
    color: var(--themeColor);
}