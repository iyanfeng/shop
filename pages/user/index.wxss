page{
    background-color: #f0f0f0;
}
.user-info-wrap{
    position: relative;
    height: 45vh;
    background-color: var(--themeColor);
    overflow: hidden;
}
.ui-btn{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.ui-img-bg{
   height: 50vh;
   filter: blur(5rpx);
}
.ui-img-text{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.ui-img-text-bg{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.ui-img-text-info{
    text-align: center;
    margin-top: 40rpx;
    color: #fff;
}

/* 内容区 */
.userinfo-content-wrap{
    position: relative;
}
.userinfo-content-main{
    position: absolute;
    top: -70rpx;
    padding: 0 25rpx 50rpx;
    width: 100%;
    color: #666;
}
.ui-content-item{
    margin-top: 20rpx;
    padding:20rpx;
    background-color: #fff;
}
.ui-content-nums{
    display: flex;
    width: 100%;
}
.ui-content-numitem{
    flex:1;
    text-align: center;
}
.ui-content-numitem>.num{
    color: var(--themeColor);
}

/* 我的订单 */
.ui-content-order{
    margin-top: 20rpx;
    background-color: #fff;
    padding-bottom: 20rpx;
}
.uic-order-title{
    border-bottom: 1rpx solid #cccccc;
    padding:10rpx 20rpx;
}
.uic-order-items{
    display: flex;
    padding-top: 10rpx;
}
.ui-order-item{
    flex:1;
    text-align: center;
}

/* 联系客服 */
.ui-appInfo-item{
    border-bottom: 1px solid #cccccc;
    padding: 20rpx;
}
.ui-content-appInfo{
    padding: 0;
}
.ui-content-service{
    display: flex;
    justify-content: space-between;
}
.ui-content-about{
    padding:20rpx;
}